{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Final Solver Output Schema",
  "type": "object",
  "properties": {
    "time": { "type": "number" },
    "iteration": { "type": "integer" },
    "ready_for_time_loop": { "type": "boolean" },
    "config": { "type": "object" },
    "grid": { "type": "object" },
    "fields": {
      "type": "object",
      "properties": {
        "P": { "type": "array" },
        "U": { "type": "array" },
        "V": { "type": "array" },
        "W": { "type": "array" },
        "P_ext": { "type": ["array", "null"] },
        "U_ext": { "type": ["array", "null"] },
        "V_ext": { "type": ["array", "null"] },
        "W_ext": { "type": ["array", "null"] }
      },
      "additionalProperties": true
    },
    "masks": {
      "type": "object",
      "properties": {
        "mask": { "type": ["array", "null"] },
        "is_fluid": { "type": ["array", "null"] },
        "is_boundary": { "type": ["array", "null"] }
      }
    },
    "fluid": { "type": "object" },
    "operators": { "type": "object" },
    "advection": { "type": "object" },
    "ppe": { "type": "object" },
    "health": { "type": "object" },
    "history": { "type": "object" },
    "diagnostics": { "type": "object" },
    "manifest": { "type": "object" }
  },
  "required": [
    "time",
    "iteration",
    "ready_for_time_loop",
    "config",
    "grid",
    "fields",
    "masks",
    "fluid",
    "operators",
    "advection",
    "ppe",
    "health",
    "history",
    "diagnostics",
    "manifest"
  ],
  "additionalProperties": true
}
